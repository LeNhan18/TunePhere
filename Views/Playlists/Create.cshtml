@model TunePhere.Models.Playlist
@using System.Security.Claims;

@{
    ViewData["Title"] = "Tạo Playlist Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/playlist.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="spotify-container">
    <div class="spotify-header">
        <h1 class="spotify-title">Tạo Playlist Mới</h1>
        <a asp-action="Index" class="spotify-btn spotify-btn-outline">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="spotify-form">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <input type="hidden" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
            
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tên Playlist</label>
                <input asp-for="Title" class="form-control" placeholder="Nhập tên cho playlist của bạn" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="IsPublic" class="control-label">Quyền truy cập</label>
                <div style="display: flex; gap: 20px; margin-top: 10px;">
                    <div>
                        <input asp-for="IsPublic" type="radio" id="isPublic" value="true" checked />
                        <label for="isPublic" style="color: var(--spotify-white); cursor: pointer;">Công khai</label>
                    </div>
                    <div>
                        <input asp-for="IsPublic" type="radio" id="isPrivate" value="false" />
                        <label for="isPrivate" style="color: var(--spotify-white); cursor: pointer;">Riêng tư</label>
                    </div>
                </div>
                <span asp-validation-for="IsPublic" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top: 24px;">
                <button type="submit" class="spotify-btn">Tạo Playlist</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 