@model IEnumerable<TunePhere.Models.Playlist>

@{
    ViewData["Title"] = "Playlists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/playlist.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="spotify-container">
    <div class="spotify-header">
        <h1 class="spotify-title">Playlists</h1>
        <a asp-action="Create" class="spotify-btn">Tạo playlist mới</a>
    </div>

    <div class="playlist-grid">
        @foreach (var item in Model) {
            <div class="playlist-card">
                <div class="playlist-img">
                    <i class="fa-solid fa-music"></i>
                </div>
                <div class="playlist-name">@item.Title</div>
                <div class="playlist-info">
                    <span>@(item.IsPublic ? "Công khai" : "Riêng tư")</span> • 
                    <span>Tạo ngày @item.CreatedAt.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="playlist-actions">
                    <a asp-action="Details" asp-route-id="@item.PlaylistId" class="action-btn" title="Chi tiết">
                        <i class="fa-solid fa-circle-info"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.PlaylistId" class="action-btn" title="Chỉnh sửa">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.PlaylistId" class="action-btn" title="Xóa">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div> 