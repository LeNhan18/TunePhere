@model TunePhere.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TunePhere</title>
    <link rel="stylesheet" href="~/css/auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="sign-in-form">
                    <h2 class="title">Đăng nhập</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="Email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" placeholder="Mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                    <input type="submit" value="Đăng nhập" class="btn solid" />
                    <p class="social-text">Hoặc đăng nhập với</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                </form>

                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="sign-up-form">
                    <h2 class="title">Đăng ký</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="Email" placeholder="Họ tên" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" placeholder="Mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" placeholder="Xác nhận mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Đăng ký" class="btn solid" />
                    <p class="social-text">Hoặc đăng ký với</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Bạn chưa có tài khoản?</h3>
                    <p>Hãy đăng ký ngay để trải nghiệm những ưu đãi tuyệt vời từ TunePhere!</p>
                    <button class="btn transparent" id="sign-up-btn">Đăng ký</button>
                </div>
                <img src="~/img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Đã có tài khoản?</h3>
                    <p>Đăng nhập ngay để mua sắm cùng TunePhere!</p>
                    <button class="btn transparent" id="sign-in-btn">Đăng nhập</button>
                </div>
                <img src="~/img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/js/auth.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html> 