@model IEnumerable<TunePhere.Models.Playlist>

@{
    ViewData["Title"] = "Quản lý Playlist";
    var users = ViewBag.Users as List<AppUser>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Quản lý Playlist</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPlaylistModal">
            <i class="fas fa-plus"></i> Tạo Playlist mới
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ảnh bìa</th>
                            <th>Tên playlist</th>
                            <th>Người tạo</th>
                            <th>Số bài hát</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var playlist in Model)
                        {
                            var user = users?.FirstOrDefault(u => u.Id == playlist.UserId);
                            <tr>
                                <td>
                                    <img src="@playlist.ImageUrl" alt="@playlist.Title" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                </td>
                                <td>@playlist.Title</td>
                                <td>@(user?.FullName ?? "Không xác định")</td>
                                <td>@(playlist.PlaylistSongs?.Count ?? 0)</td>
                                <td>
                                    @if (playlist.IsPublic)
                                    {
                                        <span class="badge bg-success">Công khai</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Riêng tư</span>
                                    }
                                </td>
                                <td>@playlist.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <button type="button" class="btn btn-info btn-sm" onclick="viewPlaylist(@playlist.PlaylistId)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button type="button" class="btn btn-primary btn-sm" onclick="editPlaylist(@playlist.PlaylistId)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deletePlaylist(@playlist.PlaylistId)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal tạo playlist -->
<div class="modal fade" id="createPlaylistModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreatePlaylist" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Tạo Playlist mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tên playlist</label>
                        <input type="text" class="form-control" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Người tạo</label>
                        <select class="form-select" name="userId" required>
                            <option value="">Chọn người dùng</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.Id">@user.FullName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ảnh bìa</label>
                        <input type="file" class="form-control" name="image" accept="image/*">
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isPublic" value="true" checked>
                            <label class="form-check-label">Công khai</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Tạo playlist</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal xem chi tiết playlist -->
<div class="modal fade" id="viewPlaylistModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết Playlist</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <img id="playlistImage" src="" alt="" class="img-fluid rounded">
                    </div>
                    <div class="col-md-8">
                        <h4 id="playlistTitle"></h4>
                        <p id="playlistDescription" class="text-muted"></p>
                        <p><strong>Người tạo:</strong> <span id="playlistUser"></span></p>
                        <p><strong>Trạng thái:</strong> <span id="playlistStatus"></span></p>
                    </div>
                </div>
                <hr>
                <h5>Danh sách bài hát</h5>
                <div class="table-responsive">
                    <table class="table" id="playlistSongsTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên bài hát</th>
                                <th>Nghệ sĩ</th>
                                <th>Thời lượng</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal chỉnh sửa playlist -->
<div class="modal fade" id="editPlaylistModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editPlaylistForm" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Playlist</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="editPlaylistId">
                    <div class="mb-3">
                        <label class="form-label">Tên playlist</label>
                        <input type="text" class="form-control" name="title" id="editPlaylistTitle" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" name="description" id="editPlaylistDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ảnh bìa mới</label>
                        <input type="file" class="form-control" name="image" accept="image/*">
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isPublic" id="editPlaylistIsPublic" value="true">
                            <label class="form-check-label">Công khai</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewPlaylist(id) {
            $.get('/Admin/GetPlaylist/' + id, function(response) {
                if (response.success) {
                    $('#playlistImage').attr('src', response.imageUrl);
                    $('#playlistTitle').text(response.title);
                    $('#playlistDescription').text(response.description);
                    $('#playlistUser').text(response.userName);
                    $('#playlistStatus').text(response.isPublic ? 'Công khai' : 'Riêng tư');

                    var tbody = $('#playlistSongsTable tbody');
                    tbody.empty();
                    response.songs.forEach((song, index) => {
                        tbody.append(`
                            <tr>
                                <td>${index + 1}</td>
                                <td>${song.title}</td>
                                <td>${song.artistName}</td>
                                <td>${song.duration}</td>
                            </tr>
                        `);
                    });

                    $('#viewPlaylistModal').modal('show');
                } else {
                    alert(response.message);
                }
            });
        }

        function editPlaylist(id) {
            $.get('/Admin/GetPlaylist/' + id, function(response) {
                if (response.success) {
                    $('#editPlaylistId').val(response.id);
                    $('#editPlaylistTitle').val(response.title);
                    $('#editPlaylistDescription').val(response.description);
                    $('#editPlaylistIsPublic').prop('checked', response.isPublic);
                    $('#editPlaylistForm').attr('action', '/Admin/EditPlaylist');
                    $('#editPlaylistModal').modal('show');
                } else {
                    alert(response.message);
                }
            });
        }

        function deletePlaylist(id) {
            if (confirm('Bạn có chắc chắn muốn xóa playlist này?')) {
                $.post('/Admin/DeletePlaylist/' + id, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                });
            }
        }
    </script>
}