@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@model int

@{
    ViewData["Title"] = "Thêm bài hát mới";
    var albumId = Model;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: white;
    }

    .form-container {
        background: #222;
        border-radius: 8px;
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: #b3b3b3;
        font-size: 0.9rem;
    }

    input[type="text"],
    input[type="file"] {
        width: 100%;
        padding: 0.75rem;
        border: none;
        background: rgba(255,255,255,.1);
        border-radius: 4px;
        color: white;
    }

    input[type="file"] {
        padding: 0.5rem;
        cursor: pointer;
    }

    .btn-submit {
        background: #7B2CBF;
        color: black;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s;
        font-size: 1rem;
    }

        .btn-submit:hover {
            background: #7b2cbf;
        }

    .btn-cancel {
        background: transparent;
        color: white;
        border: 1px solid #b3b3b3;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.2s;
        margin-right: 1rem;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cancel:hover {
            border-color: white;
        }

    .button-group {
        display: flex;
        margin-top: 2rem;
    }
</style>

<div class="container">
    <h1>Thêm bài hát mới vào album</h1>

    <div class="form-container">
        <form asp-action="AddSong" method="post" enctype="multipart/form-data">
            <input type="hidden" name="albumId" value="@albumId">

            <div class="form-group">
                <label for="Title">Tên bài hát</label>
                <input type="text" id="Title" name="Title" required>
            </div>


            <div class="form-group">
                <label for="AudioFile">File nhạc</label>
                <input type="file" id="AudioFile" name="AudioFile" accept="audio/*" required>
            </div>

            <div class="button-group">
                <a href="@Url.Action("Details", new { id = albumId })" class="btn-cancel">Hủy</a>
                <button type="submit" class="btn-submit">Thêm bài hát</button>
            </div>
        </form>
    </div>
</div> 