@model TunePhere.Models.Song

@{
    ViewData["Title"] = "Chỉnh sửa bài hát";
}

<h2>Chỉnh sửa bài hát</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="SongId" />
    <input type="hidden" asp-for="ArtistId" />
    <input type="hidden" asp-for="FileUrl" />
    <input type="hidden" asp-for="UploadDate" />
    <input type="hidden" asp-for="PlayCount" />
    <input type="hidden" asp-for="LikeCount" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VideoUrl" class="control-label"></label>
        <input asp-for="VideoUrl" class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Ảnh bìa hiện tại</label>
        <img src="@Model.ImageUrl" alt="Ảnh bìa" style="max-width: 200px;" />
    </div>

    <div class="form-group">
        <label for="imageFile" class="control-label">Chọn ảnh bìa mới</label>
        <input type="file" id="imageFile" name="imageFile" accept="image/*" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}