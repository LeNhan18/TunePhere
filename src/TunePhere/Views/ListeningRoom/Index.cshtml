@model IEnumerable<TunePhere.Models.ListeningRoom>
@{
    ViewData["Title"] = "Phòng nghe nhạc";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Phòng nghe nhạc</h1>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoomModal">
                    <i class="bi bi-plus-lg me-2"></i>Tạo phòng mới
                </button>
            </div>
            <p class="lead">Nghe nhạc cùng bạn bè và cộng đồng người yêu nhạc</p>
        </div>
    </div>

    <!-- Danh sách phòng -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            <div class="col-md-8">
                <div class="list-group shadow-sm">
                    @foreach (var room in Model)
                    {
                        <a asp-controller="ListeningRoom" asp-action="Details" asp-route-id="@room.RoomId" class="list-group-item list-group-item-action d-flex gap-3 py-3">
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h5 class="mb-0">@room.Title</h5>
                                    <p class="mb-0 opacity-75">Chủ phòng: @room.Creator.Username</p>
                                    <small class="opacity-50 text-nowrap">Tạo vào: @room.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                <div class="d-flex flex-column align-items-end">
                                    <span class="badge bg-primary rounded-pill mb-2">@room.Participants.Count người tham gia</span>
                                    <small class="opacity-50 text-nowrap">
                                        @if (room.IsActive)
                                        {
                                            <span class="text-success"><i class="bi bi-broadcast"></i> Đang hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="text-secondary"><i class="bi bi-pause-circle"></i> Tạm dừng</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Hướng dẫn</h5>
                    </div>
                    <div class="card-body">
                        <p>Phòng nghe nhạc là nơi bạn có thể:</p>
                        <ul>
                            <li>Nghe nhạc cùng bạn bè và người lạ</li>
                            <li>Chat và trao đổi về âm nhạc</li>
                            <li>Bình chọn cho bài hát tiếp theo</li>
                            <li>Xem lyrics đồng bộ với bài hát</li>
                        </ul>
                        <p>Để bắt đầu, hãy tham gia một phòng hiện có hoặc tạo phòng mới của riêng bạn!</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-12 text-center p-5 bg-light rounded">
                <i class="bi bi-music-note-list display-1 text-muted"></i>
                <h3 class="mt-3">Chưa có phòng nghe nhạc nào đang hoạt động</h3>
                <p class="lead">Hãy là người đầu tiên tạo phòng nghe nhạc</p>
                <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#createRoomModal">
                    <i class="bi bi-plus-lg me-2"></i>Tạo phòng mới
                </button>
            </div>
        }
    </div>
</div>

<!-- Modal tạo phòng mới -->
<div class="modal fade" id="createRoomModal" tabindex="-1" aria-labelledby="createRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createRoomModalLabel">Tạo phòng nghe nhạc mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="roomName" class="form-label">Tên phòng</label>
                        <input type="text" class="form-control" id="roomName" required>
                    </div>
                    <div class="mb-3">
                        <label for="roomDescription" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="roomDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="roomVisibility" class="form-label">Chế độ hiển thị</label>
                        <select class="form-select" id="roomVisibility">
                            <option value="public">Công khai</option>
                            <option value="private">Riêng tư (chỉ người được mời)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="roomPassword" class="form-label">Mật khẩu (tùy chọn)</label>
                        <input type="password" class="form-control" id="roomPassword">
                        <div class="form-text">Để trống nếu không cần mật khẩu</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary">Tạo phòng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript để xử lý tạo phòng và các tương tác khác
    </script>
} 