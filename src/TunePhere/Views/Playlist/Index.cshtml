@model IEnumerable<TunePhere.Models.Playlist>
@{
    ViewData["Title"] = "Playlist";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Quản lý Playlist</h1>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPlaylistModal">
                    <i class="bi bi-plus-lg me-2"></i>Tạo Playlist
                </button>
            </div>
        </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-4" id="playlistTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="personal-tab" data-bs-toggle="tab" data-bs-target="#personal-playlists" type="button" role="tab" aria-controls="personal-playlists" aria-selected="true">
                <i class="bi bi-person me-2"></i>Cá nhân
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="community-tab" data-bs-toggle="tab" data-bs-target="#community-playlists" type="button" role="tab" aria-controls="community-playlists" aria-selected="false">
                <i class="bi bi-people me-2"></i>Cộng đồng
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="playlistTabContent">
        <!-- Personal Playlists Tab -->
        <div class="tab-pane fade show active" id="personal-playlists" role="tabpanel" aria-labelledby="personal-tab">
            @if (Model != null && Model.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var playlist in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">@playlist.Title</h5>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary" type="button" id="playlistOptionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="playlistOptionsDropdown">
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil me-2"></i>Chỉnh sửa</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-trash me-2"></i>Xóa</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-share me-2"></i>Chia sẻ</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <img src="@playlist.ImageUrl" class="card-img-top" alt="@playlist.Title">
                                <div class="card-body">
                                    <p class="card-text">
                                        <small class="text-muted">@playlist.SongCount bài hát</small><br>
                                        <small class="text-muted">Tạo vào: @playlist.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-grid">
                                        <button class="btn btn-outline-primary">
                                            <i class="bi bi-play-fill me-2"></i>Phát tất cả
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center p-5 bg-light rounded">
                    <i class="bi bi-music-note-list display-1 text-muted"></i>
                    <h3 class="mt-3">Bạn chưa có playlist nào</h3>
                    <p class="lead">Hãy tạo playlist đầu tiên để tổ chức bài hát yêu thích của bạn</p>
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#createPlaylistModal">
                        <i class="bi bi-plus-lg me-2"></i>Tạo Playlist
                    </button>
                </div>
            }
        </div>

        <!-- Community Playlists Tab -->
        <div class="tab-pane fade" id="community-playlists" role="tabpanel" aria-labelledby="community-tab">
            @if (ViewBag.PublicPlaylists != null && ViewBag.PublicPlaylists.Count > 0)
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var playlist in ViewBag.PublicPlaylists)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-transparent">
                                    <h5 class="mb-0">@playlist.Title</h5>
                                    <small class="text-muted">Tạo bởi @playlist.User.Username</small>
                                </div>
                                <img src="@playlist.ImageUrl" class="card-img-top" alt="@playlist.Title">
                                <div class="card-body">
                                    <p class="card-text">
                                        <small class="text-muted">@playlist.SongCount bài hát</small><br>
                                        <small class="text-muted">Lượt nghe: @playlist.PlayCount</small>
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <button class="btn btn-outline-primary">
                                            <i class="bi bi-play-fill"></i>Phát
                                        </button>
                                        <button class="btn btn-outline-secondary">
                                            <i class="bi bi-heart"></i>Thích
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center p-5 bg-light rounded">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <h3 class="mt-3">Chưa có playlist công khai</h3>
                    <p class="lead">Hãy là người đầu tiên chia sẻ playlist của bạn với cộng đồng</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal tạo playlist mới -->
<div class="modal fade" id="createPlaylistModal" tabindex="-1" aria-labelledby="createPlaylistModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPlaylistModalLabel">Tạo Playlist Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="playlistName" class="form-label">Tên Playlist</label>
                        <input type="text" class="form-control" id="playlistName" required>
                    </div>
                    <div class="mb-3">
                        <label for="playlistDescription" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="playlistDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="playlistVisibility" class="form-label">Chế độ hiển thị</label>
                        <select class="form-select" id="playlistVisibility">
                            <option value="private">Riêng tư</option>
                            <option value="public">Công khai</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="playlistThumbnail" class="form-label">Ảnh bìa</label>
                        <input type="file" class="form-control" id="playlistThumbnail">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary">Tạo playlist</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript để xử lý tương tác với playlist có thể được thêm vào đây
    </script>
} 