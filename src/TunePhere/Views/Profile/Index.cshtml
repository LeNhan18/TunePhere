@model TunePhere.Models.User
@{
    ViewData["Title"] = "Hồ sơ của " + Model.Username;
}

<div class="container mt-4">
    <div class="row">
        <!-- Thông tin người dùng -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="@Model.ProfileImageUrl" class="rounded-circle img-fluid mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="@Model.Username">
                    <h2>@Model.Username</h2>
                    <p class="text-muted">@Model.Email</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-2"></i>Chỉnh sửa
                        </a>
                        <button class="btn btn-outline-success">
                            <i class="bi bi-share me-2"></i>Chia sẻ
                        </button>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Playlist
                        <span class="badge bg-primary rounded-pill">@Model.Playlists.Count</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Remix
                        <span class="badge bg-primary rounded-pill">@Model.Remixes.Count</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Người theo dõi
                        <span class="badge bg-primary rounded-pill">0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Đang theo dõi
                        <span class="badge bg-primary rounded-pill">0</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Tab nội dung -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="playlists-tab" data-bs-toggle="tab" data-bs-target="#playlists-content" type="button" role="tab" aria-controls="playlists-content" aria-selected="true">
                                <i class="bi bi-music-note-list me-2"></i>Playlist
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="remixes-tab" data-bs-toggle="tab" data-bs-target="#remixes-content" type="button" role="tab" aria-controls="remixes-content" aria-selected="false">
                                <i class="bi bi-music-note-beamed me-2"></i>Remix
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history-content" type="button" role="tab" aria-controls="history-content" aria-selected="false">
                                <i class="bi bi-clock-history me-2"></i>Lịch sử
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="profileTabContent">
                        <!-- Tab Playlist -->
                        <div class="tab-pane fade show active" id="playlists-content" role="tabpanel" aria-labelledby="playlists-tab">
                            @if (Model.Playlists != null && Model.Playlists.Any())
                            {
                                <div class="row row-cols-1 row-cols-md-2 g-4">
                                    @foreach (var playlist in Model.Playlists)
                                    {
                                        <div class="col">
                                            <div class="card h-100">
                                                <img src="@playlist.ImageUrl" class="card-img-top" alt="@playlist.Title">
                                                <div class="card-body">
                                                    <h5 class="card-title">@playlist.Title</h5>
                                                    <p class="card-text">
                                                        <small class="text-muted">@playlist.SongCount bài hát</small>
                                                    </p>
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <a href="#" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-play-fill"></i> Phát
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center p-5">
                                    <i class="bi bi-music-note-list display-4 text-muted"></i>
                                    <p class="mt-3">Bạn chưa có playlist nào</p>
                                    <a asp-controller="Playlist" asp-action="Index" class="btn btn-primary mt-2">
                                        <i class="bi bi-plus-lg me-2"></i>Tạo Playlist
                                    </a>
                                </div>
                            }
                        </div>

                        <!-- Tab Remix -->
                        <div class="tab-pane fade" id="remixes-content" role="tabpanel" aria-labelledby="remixes-tab">
                            @if (Model.Remixes != null && Model.Remixes.Any())
                            {
                                <div class="row row-cols-1 row-cols-md-2 g-4">
                                    @foreach (var remix in Model.Remixes)
                                    {
                                        <div class="col">
                                            <div class="card h-100">
                                                <img src="@remix.ImageUrl" class="card-img-top" alt="@remix.Title">
                                                <div class="card-body">
                                                    <h5 class="card-title">@remix.Title</h5>
                                                    <p class="card-text">
                                                        <small class="text-muted">Gốc: @remix.OriginalSong.Title</small>
                                                    </p>
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <a href="#" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-play-fill"></i> Phát
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center p-5">
                                    <i class="bi bi-music-note-beamed display-4 text-muted"></i>
                                    <p class="mt-3">Bạn chưa có remix nào</p>
                                    <a asp-controller="Remix" asp-action="Index" class="btn btn-primary mt-2">
                                        <i class="bi bi-plus-lg me-2"></i>Tạo Remix
                                    </a>
                                </div>
                            }
                        </div>

                        <!-- Tab Lịch sử nghe nhạc -->
                        <div class="tab-pane fade" id="history-content" role="tabpanel" aria-labelledby="history-tab">
                            <h5 class="border-bottom pb-2 mb-3">Đã nghe gần đây</h5>
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3">
                                    <img src="/images/sample-song1.jpg" class="rounded" width="50" height="50" alt="Song 1">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">Hẹn Ngày Mai</h6>
                                            <p class="mb-0 opacity-75">Hải Đăng Doo</p>
                                        </div>
                                        <small class="opacity-50 text-nowrap">3 giờ trước</small>
                                    </div>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3">
                                    <img src="/images/sample-song2.jpg" class="rounded" width="50" height="50" alt="Song 2">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">Lạc Trôi</h6>
                                            <p class="mb-0 opacity-75">Sơn Tùng M-TP</p>
                                        </div>
                                        <small class="opacity-50 text-nowrap">1 ngày trước</small>
                                    </div>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3">
                                    <img src="/images/sample-song3.jpg" class="rounded" width="50" height="50" alt="Song 3">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">Nấu Ăn Cho Em</h6>
                                            <p class="mb-0 opacity-75">Đen ft. PiaLinh</p>
                                        </div>
                                        <small class="opacity-50 text-nowrap">2 ngày trước</small>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // JavaScript cho trang profile có thể được thêm vào đây
        });
    </script>
} 