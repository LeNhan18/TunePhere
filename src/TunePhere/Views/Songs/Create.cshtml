@model TunePhere.Models.Song

@{
    ViewData["Title"] = "Thêm bài hát mới";
}

<link rel="stylesheet" href="~/css/song-create.css" />

<div class="create-container">
    <div class="create-header">
        <h1>Thêm bài hát mới</h1>
        <a href="@Url.Action("Index")" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
    </div>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="create-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Title">Tên bài hát</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre">Thể loại</label>
            <select asp-for="Genre" class="form-select" required>
                <option value="">Chọn thể loại</option>
                <option value="Pop">Pop</option>
                <option value="Rock">Rock</option>
                <option value="Hip Hop">Hip Hop</option>
                <option value="R&B">R&B</option>
                <option value="Jazz">Jazz</option>
                <option value="Classical">Classical</option>
                <option value="Electronic">Electronic</option>
                <option value="Folk">Folk</option>
                <option value="Country">Country</option>
                <option value="Other">Khác</option>
            </select>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>File nhạc</label>
            <input type="file" name="audioFile" class="form-control" accept="audio/*" required />
            <small class="text-muted">Thời lượng bài hát sẽ được tự động tính từ file</small>
        </div>

        <div class="form-group">
            <label>Ảnh bìa</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" required />
            <small class="text-muted">Chọn ảnh bìa cho bài hát</small>
        </div>

        <div class="form-group">
            <label asp-for="VideoUrl">Link Video (tùy chọn)</label>
            <input asp-for="VideoUrl" class="form-control" placeholder="https://youtube.com/..." />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="create-btn">
                <i class="fas fa-plus"></i>
                Thêm bài hát
            </button>
            <a href="@Url.Action("Index")" class="cancel-btn">
                <i class="fas fa-times"></i>
                Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Preview image when selected
            $('input[name="imageFile"]').change(function() {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#imagePreview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
}
