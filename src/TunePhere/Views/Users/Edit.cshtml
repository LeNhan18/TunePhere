@model TunePhere.Models.AppUser

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";

    Layout = "_Layout";
}

<div style="max-width: 800px; margin: 80px auto 40px; padding: 30px; background: #1E1E1E; border-radius: 10px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); color: #fff;">
    <h2 style="margin-bottom: 30px; font-weight: 700; font-size: 2rem;">Chỉnh sửa hồ sơ</h2>

    <form asp-controller="Users" asp-action="SaveProfile" method="post" enctype="multipart/form-data">
        <div style="margin-bottom: 30px;">
            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 10px; font-weight: 600; font-size: 14px; color: #ddd;">Ảnh nền</label>
                <div style="margin-bottom: 10px; height: 100px; border-radius: 8px; overflow: hidden; background: #2A2A2A; border: 2px solid rgba(255,255,255,0.1);">
                    @if (!string.IsNullOrEmpty(Model.CoverImage))
                    {
                        <img src="@Model.CoverImage" alt="Cover" style="width: 100%; height: 100%; object-fit: cover;" />
                    }
                    else
                    {
                        <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 30px; color: #555;">
                            <i class="fas fa-image"></i>
                        </div>
                    }
                </div>
                <input type="file" name="CoverImage" accept="image/*" style="width: 100%; background: #2A2A2A; padding: 10px 15px; border-radius: 4px; border: 1px solid rgba(255,255,255,0.1); color: #fff;" />
            </div>

            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 10px; font-weight: 600; font-size: 14px; color: #ddd;">Ảnh đại diện</label>
                <div style="display: flex; align-items: center; gap: 20px;">
                    <div style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden; background: #2A2A2A; border: 2px solid rgba(255,255,255,0.1);">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 50px; color: #555;">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                    </div>
                    <input type="file" name="ProfileImage" accept="image/*" style="flex: 1; background: #2A2A2A; padding: 10px 15px; border-radius: 4px; border: 1px solid rgba(255,255,255,0.1); color: #fff;" />
                </div>
            </div>

            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 10px; font-weight: 600; font-size: 14px; color: #ddd;">Họ và tên</label>
                <input type="text" name="FullName" value="@Model.FullName" style="width: 100%; padding: 12px 15px; background: #2A2A2A; border: 1px solid rgba(255,255,255,0.1); border-radius: 4px; color: #fff; font-size: 16px;" required />
            </div>
        </div>

        <div style="display: flex; justify-content: flex-end; gap: 15px;">
            <a href="/Users/Details" style="padding: 12px 25px; background: rgba(255,255,255,0.1); color: #fff; border-radius: 30px; text-decoration: none; font-weight: 600; border: 1px solid rgba(255,255,255,0.2);">Hủy</a>
            <button type="submit" style="padding: 12px 30px; background: #1DB954; color: #fff; border: none; border-radius: 30px; font-weight: 700; cursor: pointer;">Lưu thay đổi</button>
        </div>
    </form>
</div>